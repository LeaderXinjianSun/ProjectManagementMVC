@model ProjectCreateViewModel
@inject IProjectRepository _projectRepository
@{
    ViewBag.Title = "创建项目信息";
}
    <form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="ProjectID" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProjectID" class="form-control" placeholder="请输入项目ID" />
                <span asp-validation-for="ProjectID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="请输入项目名称" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Count" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Count" class="form-control" placeholder="请输入数量" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Designer" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Designer" class="form-control" placeholder="请输入设计人员" />
                <span asp-validation-for="Designer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Engineer" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Engineer" class="form-control" placeholder="请输入电控人员" />
                <span asp-validation-for="Engineer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Programmer" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Programmer" class="form-control" placeholder="请输入软件人员" />
                <span asp-validation-for="Programmer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Assembler" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Assembler" class="form-control" placeholder="请输入装配人员" />
                <span asp-validation-for="Assembler" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DesignerScore" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DesignerScore" class="form-control" placeholder="请输入设计人员积分" />
                <span asp-validation-for="DesignerScore" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EngineerScore" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EngineerScore" class="form-control" placeholder="请输入电控人员积分" />
                <span asp-validation-for="EngineerScore" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ProgrammerScore" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProgrammerScore" class="form-control" placeholder="请输入软件人员积分" />
                <span asp-validation-for="ProgrammerScore" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AssemblerScore" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AssemblerScore" class="form-control" placeholder="请输入组装人员积分" />
                <span asp-validation-for="AssemblerScore" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">创建</button>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                项目信息总数= @_projectRepository.GetAllProjects().Count().ToString()
            </div>
        </div>
    </form>
